                        {{else}}
                        {{PLATFORM_NAME}} Vendor
                        {{/if}}
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {{#if vendorData}}
                        <form action="/vendor/logout" method="POST">
                            <button class="dropdown-item" type="submit">Log out</button>
                        </form>
                        {{else}}
                        <a class="dropdown-item" href="/vendor/login">Log In</a>
                        <a class="dropdown-item" href="/vendor/signup">Sign Up</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </nav>
